@model Product

<div class="col-lg-3 mw-50">
    <img class="img-thumbnail wrap-card" src="@Model.Img" alt="@Model.Name" />
    <h3>@Model.Name</h3>
    <p>@Model.ShortDesc</p>
    <p>Цена: @Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="StoreCart" asp-action="AddToCart" asp-route-id="@Model.Id">Добавить в корзину</a></p>
</div>